doctype html
html(lang='en')
   head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      meta(name='description', content='')
      meta(name='author', content='')
      title= title
      // Bootstrap Core CSS
      link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
      // MetisMenu CSS
      link(rel='stylesheet', href='/components/metisMenu/dist/metisMenu.min.css')
      // Custom CSS
      link(rel='stylesheet', href='/components/startbootstrap-sb-admin-2/dist/css/sb-admin-2.css')
      // Custom Fonts
      link(rel='stylesheet', type='text/css', href='/components/font-awesome/css/font-awesome.min.css')
      // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
      // WARNING: Respond.js doesn't work if you view the page via file://
      //if lt IE 9
        script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
        script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
   body
      .container
         .row
            .col-md-4.col-md-offset-4
               .login-panel.panel.panel-default
                  .panel-heading
                     h3.panel-title Login systems
                  .panel-body
                     form(role='form', method='post')
                        fieldset
                           if(typeof(errorMessage) !== 'undefined')
                              .alert.alert-danger(role='alert') #{errorMessage}
                           .form-group
                              input.form-control(placeholder='Email', name='email', type='text', autofocus='')
                           .form-group
                              input.form-control(placeholder='Password', name='password', type='password', value='')
                           // Change this to a button or input when using this as a form
                           input.btn.btn-lg.btn-success.btn-block(type='submit', name='signin', value='Signin')
      // jQuery
      script(type='text/javascript', src='/components/jquery/dist/jquery.min.js')
      // Bootstrap Core JavaScript
      script(type='text/javascript', src='/components/bootstrap/dist/js/bootstrap.min.js')
      // Metis Menu Plugin JavaScript
      script(type='text/javascript', src='/components/metisMenu/dist/metisMenu.min.js')
      // Custom Theme JavaScript
      script(type='text/javascript', src='/components/startbootstrap-sb-admin-2/dist/js/sb-admin-2.js')

